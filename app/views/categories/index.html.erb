<h1 class="text-center mt-4">Listing all categories</h1>

  <div class="flickr_pagination m-3">
  <%= will_paginate @categories, :container => false %>
</div>

    <div class="container">
    <% @categories.each do |category| %>
    
    <div class="row justify-content-md-center">
      <div class="col-4 mt-4">
          <div class="card text-center shadow mb-5 bg-white rounded">
    
              <div class="card-body">
                <h5 class="card-title">
                <%= link_to category.name, category_path(category), class:"card-title text-success" %>
                <p class="card-text"><%=pluralize(category.articles.count, "category") %></p>
                </h5>
              </div>
              <div class="card-footer text-muted">
              Created <%= time_ago_in_words(category.created_at) %> ago,
              edited  <%= time_ago_in_words(category.updated_at) %> ago </small>
              </div>
          </div>
        </div>
    </div>
      <% end %>
  </div>
  
  <div class="flickr_pagination m-3">
  <%= will_paginate @categories, :container => false %>
</div>
